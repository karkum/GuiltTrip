<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FormActivity">

    <EditText
        android:id="@+id/start_text1"
        android:hint="@string/start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/end_text1"
        android:hint="@string/end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_text1"/>

    <TextView
        android:id="@+id/vehicleInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_info"
        android:textSize="30sp"
        android:layout_below="@id/end_text1"/>

    <Spinner
        android:prompt="@string/year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yearSpinner1"
        android:layout_below="@+id/vehicleInfo"
        android:layout_alignParentStart="true" />

    <Spinner
        android:prompt="@string/make"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/makeSpinner1"
        android:layout_below="@+id/yearSpinner1"
        android:layout_alignParentStart="true" />

    <Spinner
        android:prompt="@string/model"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modelSpinner1"
        android:layout_below="@+id/makeSpinner1"
        android:layout_alignParentStart="true" />

    <Spinner
        android:prompt="@string/options"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsSpinner1"
        android:layout_below="@id/modelSpinner1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_below="@id/optionsSpinner1"
        android:id="@+id/go_button"
        android:text="@string/go"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
